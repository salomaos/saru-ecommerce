@model saru_ecommerce.Models.User

@{
    ViewData["Title"] = "Editar Usuário";
}

<h1>Editar - @Html.DisplayFor(model => model.Name)</h1>

<div class="row">
    <form asp-action="Edit">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="UserId">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cpf" class="control-label"></label>
            <input asp-for="Cpf" class="form-control">
            <span class="text-danger" asp-validation-for="Cpf"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="control-label"></label>
            <input asp-for="BirthDate" class="form-control">
            <span class="text-danger" asp-validation-for="BirthDate"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <input asp-for="Gender" class="form-control">
            <span class="text-danger" asp-validation-for="Gender"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumberPrimary" class="control-label"></label>
            <input asp-for="PhoneNumberPrimary" class="form-control">
            <span class="text-danger" asp-validation-for="PhoneNumberPrimary"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumberSecondary" class="control-label"></label>
            <input asp-for="PhoneNumberSecondary" class="form-control">
            <span class="text-danger" asp-validation-for="PhoneNumberSecondary"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-warning" type="submit" value="Salvar alterações">
        </div>
    </form>
</div>