@model IEnumerable<saru_ecommerce.Models.User>

@{
    ViewData["Title"] = "User Index";
}

<h2>Usuários</h2>

<p><a asp-action="Create">Novo Usuário</a></p>

<table class="table">
    <thead>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th>@Html.DisplayNameFor(model => model.Cpf)</th>
        <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
        <th>@Html.DisplayNameFor(model => model.Gender)</th>
        <th>@Html.DisplayNameFor(model => model.Password)</th>
        <th>@Html.DisplayNameFor(model => model.PhoneNumberPrimary)</th>
        <th>@Html.DisplayNameFor(model => model.PhoneNumberSecondary)</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <th>@Html.DisplayFor(modelItem => item.Name)</th>
                <th>@Html.DisplayFor(modelItem => item.Email)</th>
                <th>@Html.DisplayFor(modelItem => item.Cpf)</th>
                <th>@Html.DisplayFor(modelItem => item.BirthDate)</th>
                <th>@Html.DisplayFor(modelItem => item.Gender)</th>
                <th>@Html.DisplayFor(modelItem => item.Password)</th>
                <th>@Html.DisplayFor(modelItem => item.PhoneNumberPrimary)</th>
                <th>@Html.DisplayFor(modelItem => item.PhoneNumberSecondary)</th>
                <th>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </th>
            </tr>
        }
    </tbody>
</table>